extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-success(5000)

    .container 
        .row.justify-content-center 
            .col-8
                h1(class="text-center") Đăng ký tài khoản
                form(
                    action="/user/register"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="fullName") Họ và tên 
                        input(
                            type="text"
                            class="form-control"
                            input="fullName"
                            name="fullName"
                            required
                        )
                    div(class="form-group")
                        label(for="email") Email 
                        input(
                            type="email"
                            class="form-control"
                            input="email"
                            name="email"
                            required
                        )
                    div(class="form-group")
                        label(for="password") Mật khẩu 
                        input(
                            type="password"
                            class="form-control"
                            input="password"
                            name="password"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Đăng ký
                    

