extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-success(5000)
    +alert-error(5000)

    .container 
        .row.justify-content-center 
            .col-8
                h1(class="text-center") Lấy lại mật khẩu
                form(
                    action="/user/password/forgot"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email 
                        input(
                            type="email"
                            class="form-control"
                            input="email"
                            name="email"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Gửi mail xác nhận
                        