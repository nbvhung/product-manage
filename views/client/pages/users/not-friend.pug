extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container 

        include ../../partials/list-btn-users.pug

        .row 
            .col-12 
                +box-head("Danh sách người dùng")

        .row(data-users-not-friend=user.id)
            each item in users
                .col-6(user-id=item.id) 
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src=(item.avatar ? item.avatar : "/images/avatar.jpg")
                                alt=item.fullName
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{item.fullName}
                            div(class="inner-buttons")
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-add-friend=item.id
                                ) Thêm bạn bè
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-cancel-friend=item.id
                                ) Hủy lời mời


    block script 
        script(type="module", src="/js/users.js") 